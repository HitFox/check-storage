{
  "rules": {
    "indent": [
      2,
      2
    ],
    "quotes": [
      2,
      "single"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "always"
    ],
    "no-console": [
      1
    ],
    "no-var": [
      1
    ],
    "arrow-spacing": [
      2
    ]
  },
  "env": {
      "es6": true,
      "node": true,
      "browser": true,
      "webextensions": true
  },
  "ecmaFeatures": {
    "modules": true
  },
  "extends": "eslint:recommended",
  "parser": "babel-eslint"
}
